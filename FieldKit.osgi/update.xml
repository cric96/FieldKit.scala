<project name="project" default="update">
	<description>
    	updates the osgi plugin with a fresh build of the fieldkit libraries
    </description>

	<property name="fieldkit" value="../FieldKit" />

	<target name="update" description="update the libraries">
		<ant dir="${fieldkit}/" target="dist" />
		<copy todir="." overwrite="true">

			<fileset dir="${fieldkit}/build/FieldKit/">
				<include name="*.jar" />
				<exclude name="*scala*" />
			</fileset>
		</copy>
	</target>
</project>
