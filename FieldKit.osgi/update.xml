<project name="FieldKit.osgi" default="update">
	<description>
    	updates the osgi plugin with a fresh build of the fieldkit libraries
    </description>

	<property name="fieldkit" value="../FieldKit" />

	<target name="clean">
		<ant dir="${fieldkit}/" target="clean" />
	</target>

	<target name="update" description="update the libraries">
		
		<antcall target="clean" />
		
		<ant dir="${fieldkit}/" target="build" />

		<copy todir=".">
			<fileset dir="${fieldkit}/build/FieldKit/library">
				<include name="*.jar" />
			</fileset>
		</copy>

		<copy file="${fieldkit}/build/FieldKit/library/FieldKit.jar" todir="." overwrite="true" />
	</target>
</project>
