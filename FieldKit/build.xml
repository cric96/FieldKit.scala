<?xml version="1.0" encoding="UTF-8"?>
<!-- ====================================================================== 
     FieldKit
     compiles the project as jar with sources                                             
     ====================================================================== -->
<project name="FieldKit" default="dist">
	<description id="desc">
		Modular library of essential utilities and frameworks for developing audio-visual interactive and generative applications.
		Designed to work well with Processing and also in standalone projects.
		Written mostly in Scala with bits of Java.
	</description>

	<tstamp>
		<format property="now" pattern="yyyy_MM_dd-HH_mm" />
	</tstamp>

	<!-- ================================= 
         CONFIGURATION    
         ================================= -->
	<property name="project.name" value="${ant.project.name}" />
	<property name="project.author" value="Marcus Wendt (www.field.io)" />
	<property name="project.version" value="0.1" />

	<!-- java -->
	<property name="javac.target" value="1.5" />

	<!-- scala -->
	<property name="scala.home" value="/opt/local/share/scala/" />
	<property name="scalac.target" value="jvm-1.5" />
	<property name="scala-library.jar" value="${scala.home}/lib/scala-library.jar" />

	<path id="scala.classpath">
		<pathelement location="${scala-library.jar}" />
		<pathelement location="${build.dir}" />
	</path>

	<taskdef resource="scala/tools/ant/antlib.xml">
		<classpath>
			<pathelement location="${scala.home}/lib/scala-compiler.jar" />
			<pathelement location="${scala-library.jar}" />
		</classpath>
	</taskdef>

	<!-- BUILD FILES & DIRECTORIES -->
	<property name="src" value="src.lib" />
	<property name="res" value="res" />
	<property name="build" value="build" />
	<property name="tmp" value="${build}/tmp" />
	<property name="dist" value="${build}/${project.name}" />
	<property name="doc" value="${build}/${project.name}/doc" />

	<property name="lib.jar" value="${tmp}/${project.name}.jar" />
	<property name="fatlib.jar" value="${jar.path}/${project.name}.fat.jar" />

	<fileset id="libraries.jar" dir="lib" includes="**/*.jar" />

	<path id="cp">
		<pathelement location="${scala-library.jar}" />
		<fileset refid="libraries.jar" />
	</path>

	<!-- ================================= 
         TARGETS
         ================================= -->
	<target name="init">
		<delete dir="${tmp}" />
		<mkdir dir="${tmp}" />
		<delete dir="${dist}" />
		<mkdir dir="${dist}" />
	</target>

	<target name="compile" depends="init">
		<!-- compile scala sources -->
        <!--
		<scalac target="${scalac.target}" addparams="-optimise" srcdir="${src}" destdir="${tmp}">
			<classpath refid="cp" />
		</scalac>
        -->

        <fsc target="${scalac.target}" srcdir="${src}" destdir="${tmp}">
			<classpath refid="cp" />
		</fsc>

		<!-- compile java sources -->
		<!--
		<javac target="${javac.target}" srcdir="${src}" destdir="${tmp}">
			<classpath>
				<fileset refid="libraries.jar" />
			</classpath>
		</javac>
		-->
	</target>

	<target name="jar" depends="compile">
		<echo>building ${lib.jar}</echo>

		<jar destfile="${lib.jar}" index="true" filesetmanifest="skip">
			<manifest>
				<attribute name="Built-By" value="${project.author}" />
				<attribute name="Build-Date" value="${now}" />
			</manifest>

			<fileset dir="${tmp}" />

			<!--
			<fileset dir="${src}">
				<include name="**/*.java" />
				<include name="**/*.scala" />
			</fileset>
			-->
		</jar>
	</target>

	<target name="doc">
		<mkdir dir="${doc}" />
		<property name="title" value="${project.name} API Specification" />
		<scaladoc srcdir="${src}" destdir="${doc}" windowtitle="${title}" doctitle="${title}" bottom="version: ${project.version} compiled: ${now}">
			<classpath refid="cp" />
		</scaladoc>
	</target>

	<target name="dist">
		<echo>----------------------------------------</echo>
		<echo>building ${project.name} distribution...</echo>
		<echo>----------------------------------------</echo>

		<antcall target="jar" />

		<move file="${lib.jar}" todir="${dist}" />
		<copy todir="${dist}" flatten="true" includeemptydirs="false">
			<fileset dir="lib" />
			<fileset file="${scala-library.jar}" />
		</copy>
	</target>
</project>